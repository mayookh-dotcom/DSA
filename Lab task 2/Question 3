#include <stdio.h>
struct complex
{
    float real;
    float imag;
};
int main(){
    struct complex n1,n2,sum,product;
    printf("Enter real and imaginary parts of 1st complex number:\n");
    scanf("%f %f", &n1.real, &n1.imag);

    printf("Enter real and imaginary parts of 2nd complex number:\n");
    scanf("%f %f", &n2.real, &n2.imag);
    
    sum.real = n1.real + n2.real;
    sum.imag = n1.imag + n2.imag;

    product.real = (n1.real * n2.real) - (n1.imag * n2.imag);
    product.imag = (n1.real * n2.imag) + (n1.imag * n2.real);

    printf("\n--- Results ---");
    printf("\nSum = %.2f + %.2fi", sum.real, sum.imag);
    printf("\nProduct = %.2f + %.2fi\n", product.real, product.imag);

    return 0;
}
