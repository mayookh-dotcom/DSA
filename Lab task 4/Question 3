#include <stdio.h>

struct poly {
    int coef;
    int exp;
};

int main() {
    struct poly A[20], B[20], C[40];
    int n1, n2, i = 0, j = 0, k = 0;

    // INPUT FIRST POLYNOMIAL 
    printf("Enter number of terms in Polynomial A: ");
    scanf("%d", &n1);

    printf("Enter terms as (coefficient exponent) in descending exponent order:\n");
    for(i = 0; i < n1; i++) {
        scanf("%d %d", &A[i].coef, &A[i].exp);
    }

    // INPUT SECOND POLYNOMIAL 
    printf("\nEnter number of terms in Polynomial B: ");
    scanf("%d", &n2);

    printf("Enter terms as (coefficient exponent) in descending exponent order:\n");
    for(j = 0; j < n2; j++) {
        scanf("%d %d", &B[j].coef, &B[j].exp);
    }

    //Addition
    i = 0; j = 0;

    while(i < n1 && j < n2) {

        if(A[i].exp == B[j].exp) {
            C[k].exp = A[i].exp;
            C[k].coef = A[i].coef + B[j].coef;
            i++; j++; k++;
        }
        else if(A[i].exp > B[j].exp) {
            C[k] = A[i];
            i++; k++;
        }
        else {
            C[k] = B[j];
            j++; k++;
        }
    }

    while(i < n1) C[k++] = A[i++];
    while(j < n2) C[k++] = B[j++];

    /* ----- OUTPUT ----- */
    printf("\nResultant Polynomial (A + B):\n");

    for(int x = 0; x < k; x++) {
        printf("%dx^%d", C[x].coef, C[x].exp);
        if(x < k-1) printf(" + ");
    }
    printf("\n");

    return 0;
}
